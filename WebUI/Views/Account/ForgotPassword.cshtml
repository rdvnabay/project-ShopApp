
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_breadCrumb">
    <h2 class="text-left text-muted mb-2">Şifremi Unuttum</h2>
    <div class="row">
        <div class="col-sm-6 offset-1">
          
            <form asp-action="ForgotPassword" method="post">
                @if (TempData["emailValidate"] != null)
                {
                    <div class="alert alert-light col-sm-6 ml-auto">
                        <small class="text-muted">
                            @TempData["emailValidate"]
                        </small>
                    </div>
                }

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"
                           for="email">Email</label>
                    <input class="form-control col-sm-6"
                           type="email" name="email" id="email"
                           placeholder="example@gmail.com" />
                </div>


                <div class="form-group row">
                    <div class="col-sm-6 ml-auto">
                        <input type="submit" value="Şifremi Yenile"
                               class="btn btn-sm btn-info" />
                    </div>
                </div>
            </form>
        </div>
    </div>

   

    @section jqueryValidations{
        <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    }







