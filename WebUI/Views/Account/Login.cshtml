@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_breadCrumb">
    <h2 class="text-left text-muted mb-2">Login</h2>
    <div class="row">
        <div class="col-sm-6 offset-1">
            @if (TempData["emailConfirmInfo"] != null)
            {
                <div class="alert alert-info col-sm-8">
                    <span class="text-dark">
                        <i class="fas fa-exclamation"></i>
                        @TempData["emailConfirmInfo"]

                    </span>

                </div>
            }

            @if (TempData["resetPasswordInfo"] != null)
            {
                <div class="alert alert-info col-sm-8">
                    <span class="text-dark">
                        <i class="fas fa-exclamation"></i>
                        @TempData["resetPasswordInfo"]

                    </span>

                </div>
            }
            <form asp-action="Login" method="post">

                <div asp-validation-summary="All"
                     class="text-muted text-danger"></div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"
                           asp-for="Email"></label>
                    <input class="form-control col-sm-6"
                           asp-for="Email"
                           placeholder="example@gmail.com" />
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"
                           asp-for="Password"></label>
                    <input class="form-control col-sm-6"
                           asp-for="Password"
                           placeholder="Enter password" />
                </div>


                <div class="form-group row">
                    <div class="col-sm-5 ml-auto">
                        <input type="submit" value="Login"
                               class="btn btn-sm btn-info" />
                    </div>
                </div>
            </form>
            <div class="text-center">
                <a asp-controller="Account" asp-action="Register"
                   class="btn btn-sm btn-light btn-outline-light text-dark mb-1">
                    Üye olmak için tıklayın
                </a>

                <a asp-controller="Account" asp-action="ForgotPassword"
                   class="btn btn-sm btn-light btn-outline-light text-dark mb-1">
                    Şifremi unuttum
                </a>
            </div>
        </div>


    </div>



    @section jqueryValidations{
        <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    }





