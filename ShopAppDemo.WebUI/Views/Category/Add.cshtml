@model CategoryModel
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_breadCrumb">
    <h2 class="text-left text-muted mb-2">Add Category</h2>
    <div class="row">
        <div class="col-sm-8 offset-1">
            <form asp-action="Add" method="post">
                <div class="form-group row">
                    <label class="col-sm-1 col-form-label" asp-for="Name"></label>
                    <input class="form-control col-sm-6" asp-for="Name" />
                </div>

                <div class="form-group row">
                    <div class="col-sm-6 ml-auto">
                        <input type="submit" value="Add" class="btn btn-sm btn-info" />
                    </div>
                </div>
            </form>
        </div>
    </div>




